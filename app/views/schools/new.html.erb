<h1>Create School</h1>

<%= form_with model: @school, local: true do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username, required: true %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.submit "Create School" %>
  </div>
<% end %>
